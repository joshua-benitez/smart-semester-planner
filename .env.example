# Database configuration
# Set DATABASE_PROVIDER to "postgresql" (default) or "sqlite" for a local dev file DB
DATABASE_PROVIDER="postgresql"
# When using SQLite locally, point to file:./prisma/dev.db
# For Postgres, use your Neon / Supabase / Vercel Postgres connection string
DATABASE_URL="postgresql://username:password@host:5432/smart_semester_planner?sslmode=require"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here"

# Auth providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
