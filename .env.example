# Database configuration (PostgreSQL only)
# Keep DATABASE_PROVIDER on "postgresql" so runtime sanity checks stay happy
DATABASE_PROVIDER="postgresql"
# Neon / Supabase / Vercel Postgres connection string with sslmode=require
DATABASE_URL="postgresql://username:password@host:5432/smart_semester_planner?sslmode=require"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here"

# Auth providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
